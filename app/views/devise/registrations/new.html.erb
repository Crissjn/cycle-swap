<div class="container">
  <div class="row">
    <div class="col-4">
      <h2 class="mb-4">Sign up</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-inputs mb-3">
          <%= f.input :image, as: :file %>
          <%= f.input :username,
                      required: true,
                      label: false,
                      input_html: { autocomplete: "username", class: "form-control mb-2", placeholder: "Username" } %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      label: false,
                      input_html: { autocomplete: "email", class: "form-control mb-2", placeholder: "Email" } %>
          <%= f.input :password,
                      required: true,
                      label: false,
                      hint: false,
                      input_html: { autocomplete: "new-password", class: "form-control mb-2", placeholder: "Password" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      label: false,
                      input_html: { autocomplete: "new-password", class: "form-control mb-2", placeholder: "Confirm Password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "btn btn-primary w-100" %>
        </div>
      <% end %>

      <div class="mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>