<div class="container">
  <div class="row">
    <div class="col-6">
      <h3>Hi <%= @user.username %>! Here you can create a new bike.</h3>
      <div></div>
      <%= simple_form_for @bike do |f| %>
        <div class="row">
          <div class="col-6">
            <%= f.input :bike_type, collection: ["city bike", "race bike", "cargo bike", "fat bike"]  %>
            <%= f.input :address  %>
            <%= f.input :size, collection: ["small", "medium", "large"] %>
          </div>
          <div class="col-6">
            <%= f.input :condition ,collection: ["bad", "average", "good"] %>
            <%= f.input :cost_per_day %>
            <%= f.input :photo, as: :file %>
            <%= f.input :description %>
          </div>
        </div>
        <%= f.submit "Create bike", class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
